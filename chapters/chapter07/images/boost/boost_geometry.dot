    GeometryModule -> Transformations [label="提供", color="#f57c00", style="dashed"];
    GeometryModule -> SpatialIndex [label="提供", color="#f57c00", style="dashed"];
    GeometryModule -> CoordinateSystems [label="提供", color="#f57c00", style="dashed"];

    BasicShapes -> SpatialOps [label="操作", color="#2e7d32", style="dotted"];
