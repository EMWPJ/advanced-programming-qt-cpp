digraph MKLDFT {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,8", pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;
    bgcolor="#ffffff";

    DFTModule [label="DFT模块\n离散傅里叶变换", fillcolor="#ce93d8", color="#7b1fa2", shape=box, style="bold,rounded", fontsize=22, penwidth=3];

    DFTInterface [label="DFT接口\nDFTI接口\n统一接口设计\n配置描述符", fillcolor="#c8e6c9", color="#2e7d32", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    OneDimDFT [label="一维DFT\n前向/反向变换\n实数/复数DFT\n配置灵活", fillcolor="#c8e6c9", color="#2e7d32", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    MultiDimDFT [label="多维DFT\n2D/3D/N维DFT\n多维变换\n批量处理", fillcolor="#fff9c4", color="#f57f17", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    RealComplex [label="实数/复数DFT\nR2C/C2R变换\n高效存储\n内存优化", fillcolor="#fff9c4", color="#f57f17", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    AdvancedFeatures [label="高级特性\n步长控制\n偏移设置\n数据布局\n性能调优", fillcolor="#ffccbc", color="#d84315", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    PerformanceOpt [label="性能优化\n多线程并行\nSIMD向量化\n缓存优化", fillcolor="#ffccbc", color="#d84315", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    DFTModule -> DFTInterface [penwidth=3, arrowsize=1.2, label="提供", color="#7b1fa2", style="dashed"];
    DFTModule -> OneDimDFT [penwidth=3, arrowsize=1.2, label="提供", color="#7b1fa2", style="dashed"];
    DFTModule -> MultiDimDFT [penwidth=3, arrowsize=1.2, label="提供", color="#7b1fa2", style="dashed"];
    DFTModule -> RealComplex [penwidth=3, arrowsize=1.2, label="提供", color="#7b1fa2", style="dashed"];
    DFTModule -> AdvancedFeatures [penwidth=3, arrowsize=1.2, label="提供", color="#7b1fa2", style="dashed"];
    DFTModule -> PerformanceOpt [penwidth=3, arrowsize=1.2, label="支持", color="#7b1fa2", style="dashed"];

    DFTInterface -> OneDimDFT [penwidth=2, label="支持", color="#666666", style="dotted"];
    DFTInterface -> MultiDimDFT [penwidth=2, label="支持", color="#666666", style="dotted"];

    labelloc="t";
    label="MKL DFT模块详细结构图";
}
