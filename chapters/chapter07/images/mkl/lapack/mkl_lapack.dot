digraph MKLLAPACK {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,8",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    LAPACKModule [label="MKL LAPACK\n线性代数包",
                  fillcolor="#9575cd", color="#5e35b1",
                  shape=box, style="bold,rounded",
                  fontsize=22, penwidth=3];

    LinearEquations [label="线性方程组求解\n?gesv / ?posv / ?gels",
                     fillcolor="#90caf9", color="#1976d2",
                     shape=box, style="bold,rounded",
                     fontsize=16, penwidth=2.5];

    Eigenvalue [label="特征值问题\n?syev / ?geev / ?sygv",
                fillcolor="#ffcc80", color="#f57c00",
                shape=box, style="bold,rounded",
                fontsize=16, penwidth=2.5];

    MatrixDecomp [label="矩阵分解\n?getrf / ?potrf / ?geqrf",
                  fillcolor="#a5d6a7", color="#388e3c",
                  shape=box, style="bold,rounded",
                  fontsize=16, penwidth=2.5];

    MatrixOps [label="矩阵运算\n?getri / ?gecon / ?lange",
               fillcolor="#f48fb1", color="#c2185b",
               shape=box, style="bold,rounded",
               fontsize=16, penwidth=2.5];

    LAPACKModule -> LinearEquations [penwidth=3.5, arrowsize=1.3];
    LAPACKModule -> Eigenvalue [penwidth=3.5, arrowsize=1.3];
    LAPACKModule -> MatrixDecomp [penwidth=3.5, arrowsize=1.3];
    LAPACKModule -> MatrixOps [penwidth=3.5, arrowsize=1.3];
}
