digraph MKLLAPACKNonsymmetricEigen {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,7",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    NonsymEigenModule [label="LAPACK非对称特征值问题",
                       fillcolor="#a5d6a7", color="#388e3c",
                       shape=box, style="bold,rounded",
                       fontsize=22, penwidth=3];

    NonsymEigenStandard [label="标准算法\n?geev / ?geevx / ?gees",
                         fillcolor="#dcedc8", color="#558b2f",
                         shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    HessenbergRed [label="Hessenberg约化\n?gehrd / ?orghr / ?ormhr",
                   fillcolor="#dcedc8", color="#558b2f",
                   shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    SchurForm [label="Schur分解\n?gees / ?geesx",
               fillcolor="#dcedc8", color="#558b2f",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    NonsymEigenModule -> NonsymEigenStandard [penwidth=3.5, arrowsize=1.3];
    NonsymEigenModule -> HessenbergRed [penwidth=3.5, arrowsize=1.3];
    NonsymEigenModule -> SchurForm [penwidth=3.5, arrowsize=1.3];
}
