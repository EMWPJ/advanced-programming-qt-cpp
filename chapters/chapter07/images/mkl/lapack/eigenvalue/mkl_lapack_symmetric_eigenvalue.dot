digraph MKLLAPACKSymmetricEigen {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,7",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    SymEigenModule [label="LAPACK对称特征值问题",
                    fillcolor="#ffcc80", color="#f57c00",
                    shape=box, style="bold,rounded",
                    fontsize=22, penwidth=3];

    SymEigenStandard [label="标准算法\n?syev / ?syevd / ?syevr",
                      fillcolor="#ffe0b2", color="#e65100",
                      shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    TridiagEigen [label="三对角特征值\n?stev / ?stevd / ?stevr",
                  fillcolor="#ffe0b2", color="#e65100",
                  shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    SymBandEigen [label="带状对称\n?sbtrd / ?sbgv / ?sbgvd",
                  fillcolor="#ffe0b2", color="#e65100",
                  shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    SymEigenModule -> SymEigenStandard [penwidth=3.5, arrowsize=1.3];
    SymEigenModule -> TridiagEigen [penwidth=3.5, arrowsize=1.3];
    SymEigenModule -> SymBandEigen [penwidth=3.5, arrowsize=1.3];
}
