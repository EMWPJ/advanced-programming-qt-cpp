digraph MKLLAPACKEigenvalueDrivers {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="11,8",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    EigenDriverModule [label="LAPACK特征值驱动例程",
                       fillcolor="#ffcc80", color="#f57c00",
                       shape=box, style="bold,rounded",
                       fontsize=22, penwidth=3];

    SymEigenDriver [label="对称特征值\n?syev / ?syevd / ?syevr",
                    fillcolor="#ffe0b2", color="#e65100",
                    shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    NonsymEigenDriver [label="非对称特征值\n?geev / ?geevx / ?gees",
                       fillcolor="#dcedc8", color="#558b2f",
                       shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    SVDDriver [label="SVD分解\n?gesvd / ?gesdd / ?gesvdq",
               fillcolor="#fffde7", color="#f57c00",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    GenSymDefDriver [label="广义对称正定\n?dsygv / ?dsygvd / ?dsygvx",
                     fillcolor="#b2dfdb", color="#00695c",
                     shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    GenNonsymDriver [label="广义非对称\n?ggev / ?ggevx / ?ggees",
                     fillcolor="#ffe0b2", color="#e65100",
                     shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    EigenDriverModule -> SymEigenDriver [penwidth=3.5, arrowsize=1.3];
    EigenDriverModule -> NonsymEigenDriver [penwidth=3.5, arrowsize=1.3];
    EigenDriverModule -> SVDDriver [penwidth=3.5, arrowsize=1.3];
    EigenDriverModule -> GenSymDefDriver [penwidth=3.5, arrowsize=1.3];
    EigenDriverModule -> GenNonsymDriver [penwidth=3.5, arrowsize=1.3];
}
