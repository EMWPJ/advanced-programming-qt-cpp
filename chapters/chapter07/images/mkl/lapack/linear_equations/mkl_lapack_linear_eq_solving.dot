digraph MKLLAPACKLinearEqSolving {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,7",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    SolveModule [label="LAPACK线性方程组 - 求解系统",
                 fillcolor="#ffd89b", color="#f57c00",
                 shape=box, style="bold,rounded",
                 fontsize=22, penwidth=3];

    GenSolve [label="一般系统\n?getrs / ?getrs2",
              fillcolor="#fff9c4", color="#f57c00",
              shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    SymSolve [label="对称正定\n?potrs",
              fillcolor="#fff9c4", color="#f57c00",
              shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    SymIndefSolve [label="对称不定\n?sytrs / ?sytrs_rook",
                   fillcolor="#fff9c4", color="#f57c00",
                   shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    BandSolve [label="带状系统\n?gbtrs / ?pbtrs / ?pttrs",
               fillcolor="#fff9c4", color="#f57c00",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    SolveModule -> GenSolve [penwidth=3.5, arrowsize=1.3];
    SolveModule -> SymSolve [penwidth=3.5, arrowsize=1.3];
    SolveModule -> SymIndefSolve [penwidth=3.5, arrowsize=1.3];
    SolveModule -> BandSolve [penwidth=3.5, arrowsize=1.3];
}
