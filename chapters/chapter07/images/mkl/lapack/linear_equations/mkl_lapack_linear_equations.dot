digraph MKLLAPACKLinearEquations {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="12,9",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    LinearEqModule [label="LAPACK线性方程组求解模块",
                    fillcolor="#90caf9", color="#1976d2",
                    shape=box, style="bold,rounded",
                    fontsize=22, penwidth=3];

    // 计算例程 (Computational Routines)
    CompRoutines [label="计算例程", fillcolor="#e3f2fd", color="#1976d2", shape=box, style="bold,rounded", fontsize=16, penwidth=2.5];

    // 矩阵分解
    MatrixFact [label="矩阵分解\n?getrf / ?potrf / ?sytrf", fillcolor="#c8e6c9", color="#388e3c", shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    // 求解系统
    SolveSystems [label="求解系统\n?getrs / ?potrs / ?sytrs", fillcolor="#fff9c4", color="#f57c00", shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    // 条件数估计
    CondEst [label="条件数估计\n?gecon / ?pocon / ?sycon", fillcolor="#ffccbc", color="#e65100", shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    // 矩阵求逆
    MatrixInv [label="矩阵求逆\n?getri / ?potri / ?sytri", fillcolor="#c5e1a5", color="#558b2f", shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    // 驱动例程 (Driver Routines)
    DriverRoutines [label="驱动例程\n?gesv / ?posv / ?sysv", fillcolor="#ffb74d", color="#e65100", shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    // 连接关系
    LinearEqModule -> CompRoutines [penwidth=3.5, arrowsize=1.3];
    LinearEqModule -> DriverRoutines [penwidth=3.5, arrowsize=1.3];

    CompRoutines -> MatrixFact [penwidth=3, arrowsize=1.2];
    CompRoutines -> SolveSystems [penwidth=3, arrowsize=1.2];
    CompRoutines -> CondEst [penwidth=3, arrowsize=1.2];
    CompRoutines -> MatrixInv [penwidth=3, arrowsize=1.2];
}
