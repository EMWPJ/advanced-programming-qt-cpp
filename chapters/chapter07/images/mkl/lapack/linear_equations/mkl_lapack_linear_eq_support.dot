digraph MKLLAPACKLinearEqSupport {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,7",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    SupportModule [label="LAPACK线性方程组 - 支持例程",
                   fillcolor="#90caf9", color="#1976d2",
                   shape=box, style="bold,rounded",
                   fontsize=22, penwidth=3];

    CondEst [label="条件数估计\n?gecon / ?pocon / ?sycon",
             fillcolor="#ffccbc", color="#e65100",
             shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    RefineSol [label="解的精化\n?gerfs / ?porfs / ?syrfs",
               fillcolor="#f3e5f5", color="#7b1fa2",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    MatrixInv [label="矩阵求逆\n?getri / ?potri / ?sytri",
               fillcolor="#c5e1a5", color="#558b2f",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    MatrixEquil [label="矩阵平衡\n?geequ / ?poequ / ?syequ",
                 fillcolor="#b2dfdb", color="#00695c",
                 shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    SupportModule -> CondEst [penwidth=3.5, arrowsize=1.3];
    SupportModule -> RefineSol [penwidth=3.5, arrowsize=1.3];
    SupportModule -> MatrixInv [penwidth=3.5, arrowsize=1.3];
    SupportModule -> MatrixEquil [penwidth=3.5, arrowsize=1.3];
}
