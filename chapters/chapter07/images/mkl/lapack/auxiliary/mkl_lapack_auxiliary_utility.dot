digraph MKLLAPACKAuxiliaryUtility {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="11,8",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    AuxUtilityModule [label="LAPACK辅助例程和工具函数模块",
                      fillcolor="#b0bec5", color="#546e7a",
                      shape=box, style="bold,rounded",
                      fontsize=22, penwidth=3];

    AuxRoutines [label="辅助例程\n?lacpy / ?laset / ?lange\n?getf2 / ?potf2 / ?geqr2",
                 fillcolor="#e3f2fd", color="#1976d2",
                 shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    NormAux [label="范数计算\n?lange / ?lansy / ?nrm2",
             fillcolor="#ffe0b2", color="#e65100",
             shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    UtilityRoutines [label="工具函数\nilaenv / ?lamch / ieeeck",
                     fillcolor="#e1bee7", color="#7b1fa2",
                     shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    AuxUtilityModule -> AuxRoutines [penwidth=3.5, arrowsize=1.3];
    AuxUtilityModule -> NormAux [penwidth=3.5, arrowsize=1.3];
    AuxUtilityModule -> UtilityRoutines [penwidth=3.5, arrowsize=1.3];
}
