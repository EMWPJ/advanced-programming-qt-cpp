digraph MKLLAPACKAuxConditionError {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,6",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    CondErrorModule [label="LAPACK辅助例程 - 条件数和误差估计",
                     fillcolor="#b0bec5", color="#546e7a",
                     shape=box, style="bold,rounded",
                     fontsize=22, penwidth=3];

    CondEstAux [label="条件数估计\n?lacn2 / ?lacon\n?la_gercond / ?la_porcond",
                fillcolor="#c5e1a5", color="#558b2f",
                shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    ErrorEstAux [label="误差估计\n?la_gerfsx_extended\n?la_porfsx_extended",
                 fillcolor="#c5e1a5", color="#558b2f",
                 shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];
    GrowthAux [label="增长因子估计\n?la_gerpvgrw / ?la_porpvgrw",
               fillcolor="#c5e1a5", color="#558b2f",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    CondErrorModule -> CondEstAux [penwidth=3.5, arrowsize=1.3];
    CondErrorModule -> ErrorEstAux [penwidth=3.5, arrowsize=1.3];
    CondErrorModule -> GrowthAux [penwidth=3.5, arrowsize=1.3];
}
