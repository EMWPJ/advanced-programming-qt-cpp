digraph MKLLAPACKAuxMatrixVector {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,7",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    MatrixVectorModule [label="LAPACK辅助例程 - 矩阵和向量操作",
                        fillcolor="#b0bec5", color="#546e7a",
                        shape=box, style="bold,rounded",
                        fontsize=22, penwidth=3];

    MatrixOps [label="矩阵操作\n?lacpy / ?laset / ?laswp",
               fillcolor="#c8e6c9", color="#388e3c",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    VectorOps [label="向量操作\n?rot / ?lartg / ?nrm2",
               fillcolor="#fff9c4", color="#f57c00",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    MatVecOps [label="矩阵-向量乘积\n?symv / ?hemv / ?la_geamv",
               fillcolor="#ffccbc", color="#e65100",
               shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    MatrixVectorModule -> MatrixOps [penwidth=3.5, arrowsize=1.3];
    MatrixVectorModule -> VectorOps [penwidth=3.5, arrowsize=1.3];
    MatrixVectorModule -> MatVecOps [penwidth=3.5, arrowsize=1.3];
}
