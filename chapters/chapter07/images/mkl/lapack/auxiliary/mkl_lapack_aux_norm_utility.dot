digraph MKLLAPACKAuxNormUtility {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,7",
           pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    bgcolor="#ffffff";
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;

    NormUtilityModule [label="LAPACK辅助例程 - 范数计算和工具函数",
                       fillcolor="#b0bec5", color="#546e7a",
                       shape=box, style="bold,rounded",
                       fontsize=22, penwidth=3];

    NormComp [label="范数计算\n?lange / ?lansy / ?nrm2",
              fillcolor="#ffb74d", color="#e65100",
              shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    UtilityFuncs [label="工具函数\nilaenv / ?lamch / ieeeck",
                  fillcolor="#90caf9", color="#1976d2",
                  shape=box, style="bold,rounded", fontsize=15, penwidth=2.5];

    NormUtilityModule -> NormComp [penwidth=3.5, arrowsize=1.3];
    NormUtilityModule -> UtilityFuncs [penwidth=3.5, arrowsize=1.3];
}
