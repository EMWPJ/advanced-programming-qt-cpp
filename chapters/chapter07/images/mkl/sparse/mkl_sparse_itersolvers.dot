digraph MKLSparseIterSolvers {
    graph [fontname="Microsoft YaHei", fontsize=20, bgcolor="#ffffff", dpi=300, size="10,8", pad=0.5, margin=0.3];
    node [fontname="Microsoft YaHei", fontsize=14, style="filled,rounded"];
    edge [fontname="Microsoft YaHei", penwidth=3, color="#666666"];

    rankdir=TB;
    nodesep=0.8;
    ranksep=1.2;
    splines=spline;
    concentrate=false;
    bgcolor="#ffffff";

    SparseIterSolversModule [label="稀疏迭代求解器模块\n迭代方法求解稀疏系统", fillcolor="#e1bee7", color="#6a1b9a", shape=box, style="bold,rounded", fontsize=22, penwidth=3];

    CG [label="共轭梯度法(CG)\n对称正定矩阵\nKrylov子空间\n快速收敛", fillcolor="#c8e6c9", color="#2e7d32", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    BiCG [label="双共轭梯度法(BiCG)\n非对称矩阵\nBiCGStab变体\n稳定版本", fillcolor="#c8e6c9", color="#2e7d32", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    GMRES [label="GMRES方法\n一般矩阵\n最小残差\n重启GMRES", fillcolor="#c8e6c9", color="#2e7d32", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    Preconditioners [label="预条件子\n对角预条件\n不完全LU\n多网格预条件", fillcolor="#fff9c4", color="#f57f17", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    ConvergenceControl [label="收敛控制\n收敛准则\n迭代次数限制\n残差控制", fillcolor="#ffccbc", color="#d84315", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    MemoryEfficient [label="内存高效\n无需存储矩阵分解\n适合大规模问题\n内存受限场景", fillcolor="#ffccbc", color="#d84315", shape=ellipse, style="bold,rounded", fontsize=16, penwidth=2.5];

    SparseIterSolversModule -> CG [penwidth=3, arrowsize=1.2, label="提供", color="#6a1b9a", style="dashed"];
    SparseIterSolversModule -> BiCG [penwidth=3, arrowsize=1.2, label="提供", color="#6a1b9a", style="dashed"];
    SparseIterSolversModule -> GMRES [penwidth=3, arrowsize=1.2, label="提供", color="#6a1b9a", style="dashed"];
    SparseIterSolversModule -> Preconditioners [penwidth=3, arrowsize=1.2, label="提供", color="#6a1b9a", style="dashed"];
    SparseIterSolversModule -> ConvergenceControl [penwidth=3, arrowsize=1.2, label="提供", color="#6a1b9a", style="dashed"];
    SparseIterSolversModule -> MemoryEfficient [penwidth=3, arrowsize=1.2, label="支持", color="#6a1b9a", style="dashed"];

    CG -> Preconditioners [penwidth=2, label="使用", color="#666666", style="dotted"];
    BiCG -> Preconditioners [penwidth=2, label="使用", color="#666666", style="dotted"];
    GMRES -> Preconditioners [penwidth=2, label="使用", color="#666666", style="dotted"];

    labelloc="t";
    label="MKL 稀疏迭代求解器模块详细结构图";
